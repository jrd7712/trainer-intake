<configuration>
    <!-- Console appender (still see logs in terminal) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Separate file appender for JwtFilter logs -->
    <appender name="JWT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/jwt-debug.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rotate daily -->
            <fileNamePattern>logs/jwt-debug.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger (general app logs) -->
    <root level="ERROR">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Logger for your JwtFilter -->
    <logger name="com.example.trainerintake.security.JwtFilter" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="JWT_FILE"/>
    </logger>
</configuration>